
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @RenderBody()
    </div>



    <div class="container" id="KullanıcıBox">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown dropup">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @if (@TempData["picture"] == null)
                        {
                            <span class="glyphicon glyphicon-user"></span>
                        }
                        else
                        {
                            <img src="@TempData["picture"]" />
                        }

                        @if (@TempData["first_name"] == null)
                        {
                            @TempData["Kullanıcı"]
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        }
                        else
                        {
                            <strong>@TempData["first_name"] @TempData["lastname"]</strong>
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        }

                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <div class="navbar-login">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <p class="text-center">
                                            @if (@TempData["picture"] == null)
                                            {
                                                <span class="glyphicon glyphicon-user icon-size"></span>
                                            }
                                            else
                                            {
                                                <img src="@TempData["picture"]" />
                                            }
                                        </p>
                                    </div>
                                    <div class="col-lg-8">
                                        <p class="text-left"><strong>Hoşgeldiniz</strong></p>
                                        @if (TempData["email"] == null)
                                        {

                                        }
                                        else
                                        {
                                            <p class="text-left small">@TempData["email"]</p>
                                        }
                                        <p class="text-left">
                                            <a href="#" class="btn btn-primary btn-block btn-sm">Bilgilerimi Güncelle</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <div class="navbar-login navbar-login-session">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <p>
                                            @Html.ActionLink("Çıkış Yap", "ÇıkışYap", "Login", null, new { @class = "btn btn-danger btn-block" })
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>


    <style>
        .navbar-default {
            background-color: white;
        }

        .navbar-login {
            width: 305px;
            padding: 10px;
            padding-bottom: 0px;
        }

        .navbar-login-session {
            padding: 10px;
            padding-bottom: 0px;
            padding-top: 0px;
        }

        }

        .icon-size {
            font-size: 87px;
        }

        #KullanıcıBox {
            position: fixed;
            bottom: 0px;
            right: 0px;
        }
    </style>



</body>
</html>
